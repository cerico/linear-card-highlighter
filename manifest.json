{
  "manifest_version": 2,
  "name": "Linear Card Highlighter",
  "version": "0.1.0",
  "description": "Add color trim to linear cards for better visibility across projects",
  "icons": {
    "48": "icons/48.png"
  },
  "homepage_url": "https://linear-card-highlighter.io37.ch",
  "content_scripts": [
    {
      "matches": [
        "https://linear.app/*"
      ],
      "js": [
        "init.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "garethrobertlee@gmail.com"
    }
  },
  "browser_action": {
    "default_icon": "icons/48.png",
    "default_title": "Linear Card Highlighter"
  }
}
